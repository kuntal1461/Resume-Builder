FROM node:20-alpine

ENV NEXT_TELEMETRY_DISABLED=1 \
    NODE_ENV=development \
    PORT=3000

WORKDIR /app

COPY resume-admin-dashboard/frontend/package*.json ./
COPY resume-admin-dashboard/frontend ./

COPY docker/entrypoint.frontend.sh /entrypoint.sh
RUN chmod +x /entrypoint.sh \
  && mkdir -p /app/node_modules \
  && chown -R node:node /app /entrypoint.sh /app/node_modules

USER node

EXPOSE 3000

ENTRYPOINT ["/entrypoint.sh"]
CMD ["dev"]
